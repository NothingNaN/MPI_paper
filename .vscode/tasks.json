{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                // "-Wl,-z,stack-size=16777216", // 16MiB stack size
                "-Wall",
                // "-O2",
                "-fsanitize=address",
                "-fsanitize=leak",
                "-std=c++17",
                "Source/main.cpp",
                "Source/sorting_alg.cpp",
                "Source/tests.cpp",
                "Source/generator.cpp",
                "-o",
                "bin/main",
                "-ISource/headers"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}